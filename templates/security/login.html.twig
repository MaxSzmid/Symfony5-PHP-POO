{% extends 'base.html.twig' %}

{% block title %}

	{{parent()}}
	Log in!
{% endblock %}

{% block stylesheet %}
	{{parent()}}
	<style>
		html,
		body {
			height: 100%;
		}
		body {
			display: -ms-flexbox;
			display: flex;
			-ms-flex-align: center;
			align-items: center;
			padding-top: 40px;
			padding-bottom: 40px;
			background-color: #f5f5f5;
		}
	</style>
{% endblock %}
{% block body %}
	<body class="text-center" id="loginBody">
		{% if error %}
			<div class="alert alert-danger">{{
        error.messageKey|trans(error.messageData,
        'security') }}</div>
		{% endif %}
		<div class="card form-signin">
			<form method="post">
				<h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
				<label for="inputEmail">Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control text-center" required autofocus>
				<label for="inputPassword">Password</label>
				<input type="password" name="password" id="inputPassword" class="form-control text-center" required>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div class="checkbox mb-3">
					<label>
						<input type="checkbox" name="_remember_me">
						Remember																																																																					                            me
					</label>
				</div>
				<button class="btn btn-lg btn-primary" type="submit">
					Sign in
				</button>
			</form>
		</div>
	</body>
{% endblock %}
