
{% extends 'base.html.twig' %}
{% block title %}{{parent()}} Log in!{% endblock %}

{% block body %}
{% if app.user %}
<div class="mb-3">
    You are logged in as {{ app.user.username }}, <a
        href="{{
        path('app_logout') }}">Logout</a>
</div>
{% endif %}
{% if error %}
<div class="alert alert-danger">{{
    error.messageKey|trans(error.messageData,
    'security') }}</div>
{% endif %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6 bg-secondary rounded my-3 p-5">
            <form method="post" class="text-center">
                <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email"
                        id="inputEmail" class="form-control text-center"
                        required autofocus>
                </div>
                <div class="form-group">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword"
                        class="form-control text-center" required>
                </div>
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}">

                {#
                Uncomment this section and add a remember_me option below
                your
                firewall
                to
                activate remember me functionality.
                See
                https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember
                        me
                    </label>
                </div>
                #}
                <button class="btn btn-lg btn-primary" type="submit">
                    Sign in
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
