{% extends 'base.html.twig' %}
{% block body %} {{parent()}}

<div class="container">
    <div class="col-12">
        <div class="card">
            {% for p in post %}
            <div class="card-header bg-secondary text-white">Post Owner:
                {{p.name}} <span
                    class="float-right">Date: {{p.fecha_publicacion | date}}</span></div>
            <div class="card-body bg-light">
                <h5 class="card-title">{{p.titulo}}</h5>
                <p class="card-text">- {{p.contenido}}</p>
            </div>
            {% endfor %}
        </div>
    </div>
    <hr class="my-3">

    <div class="col-12">
        <h2> {{form(formComment)}}</h2>
    </div>
    <ul>
     
          {{ dump(allComments) }}
    </ul>
</div>
{% endblock %}
