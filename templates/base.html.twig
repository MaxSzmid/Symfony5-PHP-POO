<!DOCTYPE html>
<html>
	<head>
		{% block meta %}
			<meta charset="UTF-8">
			<meta name="viewport" content="width=device-width, initial-scale=1.0">
		{% endblock %}
		{% block stylesheet %}
			<link rel="stylesheet" href="{{asset('assets/bootstrap-4.5.3-dist/css/bootstrap.min.css')}}">
			<link rel="stylesheet" href="{{asset('assets/customStyles/style.css')}}">
			<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
		</head>
	{% endblock %}
	<title>
		{% block title %}Welcome to
		{% endblock %}
	</title>
	<body>
		{% block body %}
			<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
				<a class="navbar-brand" href="{{path('dashboard')}}">Dashboard</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav mr-auto">
						<li class="nav-item">
							<a class="nav-link" href="{{path('posts')}}">Create Posts</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{path('myPosts')}}">My Posts</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{path('my_activity')}}">My activity</a>
						</li>
					</ul>
					<a class="btn btn-outline-warning my-2 my-sm-0 logout" type="submit" href="{{path('app_logout')}}">Logout</a>
				</div>
			</nav>
		{% endblock %}
		{% block javascript %}
			<script src="{{asset('assets/jquery/jquery-3.5.1.min.js')}}"></script>
			<script src="{{asset('assets/bootstrap-4.5.3-dist/js/bootstrap.min.js')}}"></script>
		{% endblock %}
	</body>
</html>
